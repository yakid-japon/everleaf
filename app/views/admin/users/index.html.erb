<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
      <th>Task count</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
      <td>
        <%= link_to 'Destroy', admin_user_path(user), method: :delete, data: {
        confirm: 'Are you sure?' } %>
      </td>
      <td style="padding-left: 30px"><%=user.tasks.count%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New User', new_admin_user_path %>